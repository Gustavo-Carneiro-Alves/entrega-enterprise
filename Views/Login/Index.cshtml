@model LoginModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}


<form asp-controller="Login" asp-action="Entrar" method="post">
    <div class="mb-3">
        <label for="cpf" class="form-label">CPF</label>
        <input type="text" asp-for="CPF" class="form-control" id="cpf" placeholder="12345678901">
        @Html.ValidationMessageFor(x => x.CPF)
    </div>
    <div class="mb-3">
        <label for="senha" class="form-label">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" id="senha" placeholder="123">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>

    <button type="submit" class="btn btn-primary btn-block">Entrar</button>
</form>